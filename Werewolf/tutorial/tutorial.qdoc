                    rowSpacing: 0   //no spaces between role cards
                    columnSpacing: 0

                    columns: 2  //2 cards in one row

                    anchors.centerIn: parent

                    Repeater {
                        model: ListModel {
                            ListElement { name: "Werewolf"}
