                    Behavior on height {
                        NumberAnimation {
                            duration: 200
                        }
                    }

                    opacity: (height > 0) ? 1 : 0 //visible as soon as the height is greater than zero

                    anchors.top: roleList.bottom        //attaches it to the bottom of the list
                    anchors.horizontalCenter: roleList.horizontalCenter //centers it

                    Text {
